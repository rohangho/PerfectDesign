<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="false">




        <android.support.v7.widget.CardView
            android:id="@+id/cardToTest"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="70dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="1dp"
            app:cardCornerRadius="29dp"
            app:cardElevation="7dp"
            tools:layout_marginTop="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="TestCase" />
               <android.support.v7.widget.CardView
                   android:layout_width="200dp"
                   android:layout_height="100dp"
                   app:cardUseCompatPadding="true"
                   app:cardCornerRadius="29dp"
                   android:id="@+id/buttonPanelforCustomize"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   app:cardElevation="4dp"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/customize"
                       android:textColor="#000000"
                       android:layout_margin="3dp"
                       android:layout_gravity="center"
                       android:textSize="30sp"
                       android:textStyle="bold" />
               </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="29dp"
                    android:id="@+id/buttonPanelforQuickbuy"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/buttonPanelforCustomize"
                    app:cardElevation="4dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quickbuy"
                        android:textColor="#000000"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/sampler"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:elevation="10dp"
            android:src="@drawable/a2"
            app:backgroundTint="@null"
            app:elevation="10dp"
            app:fabCustomSize="200dp"
            app:fabSize="normal"
            app:maxImageSize="200dp"
            app:pressedTranslationZ="2dp">


        </android.support.design.widget.FloatingActionButton>

    </android.support.design.widget.CoordinatorLayout>




</RelativeLayout>